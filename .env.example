# Copy to .env and adjust

# Shared cache dir (used by python/stts and nodejs/stts.mjs if set)
# If empty, defaults are:
# - python: ~/.config/stts-python
# - nodejs: ~/.config/stts-nodejs
STTS_CONFIG_DIR=

# Config file format preference: auto/json/yaml
# - auto (default): prefer YAML if config.yaml/config.yml exists, else JSON
# - yaml: use config.yaml (or config.yml)
# - json: use config.json
STTS_CONFIG_FORMAT=auto

# Enable natural-language -> command via nlp2cmd CLI (recommended to keep confirmation enabled)
STTS_NLP2CMD_ENABLED=0
STTS_NLP2CMD_BIN=nlp2cmd
# Example: -r "..." (as requested)
STTS_NLP2CMD_ARGS=-r
STTS_NLP2CMD_CONFIRM=1

# Optional overrides (leave empty to use config.json)
STTS_TIMEOUT=
STTS_LANGUAGE=pl
STTS_STT_PROVIDER=
STTS_STT_MODEL=
STTS_TTS_PROVIDER=
STTS_TTS_VOICE=pl
STTS_FASTER_WHISPER_DEVICE=
STTS_FASTER_WHISPER_COMPUTE_TYPE=
STTS_AUTO_TTS=
STTS_MIC_DEVICE=
STTS_SPEAKER_DEVICE=
STTS_AUDIO_AUTO_SWITCH=1
STTS_STREAM=
STTS_FAST_START=
STTS_STT_GPU_LAYERS=
STTS_GPU_ENABLED=

# Python-only: interactive voice prompts
STTS_PROMPT_VOICE_FIRST=
STTS_STARTUP_TTS=

# Python-only: VAD (auto-stop) for recording
STTS_VAD_ENABLED=
STTS_VAD_SILENCE_MS=
STTS_VAD_THRESHOLD_DB=

# Safety (python): always confirm, plus denylist of dangerous commands
STTS_SAFE_MODE=

# GPU acceleration (both python and nodejs)
# - STTS_GPU_ENABLED: force GPU build (1=yes, 0=no, empty=auto-detect CUDA)
# - STTS_GPU_LAYERS: number of layers to offload to GPU (default: 99 = all)
STTS_GPU_ENABLED=
STTS_GPU_LAYERS=99

# Performance tuning
# - STTS_THREADS: CPU threads for whisper (0 = auto, max 8)
# - STTS_FAST_START: skip slow system detection (1 = fast, 0 = full)
# - STTS_STREAM: stream command output (1 = yes)
STTS_THREADS=
STTS_FAST_START=1
STTS_STREAM=

# Python-only: Piper automation
# - Auto-install piper binary to ~/.config/stts-python/bin
# - Auto-download voice model/config to ~/.config/stts-python/models/piper
STTS_PIPER_AUTO_INSTALL=
STTS_PIPER_AUTO_DOWNLOAD=
STTS_PIPER_RELEASE_TAG=
STTS_PIPER_VOICE_VERSION=

# Testing: when set to 1, STT is read from sidecar file.wav.txt
STTS_MOCK_STT=
