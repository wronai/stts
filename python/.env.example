# Copy to .env and adjust

# Cache dir (models, config)
STTS_CONFIG_DIR=

# Config file format preference: auto/json/yaml
STTS_CONFIG_FORMAT=auto

# Enable NLP2CMD integration (natural language -> shell command)
STTS_NLP2CMD_ENABLED=1
STTS_NLP2CMD_BIN=nlp2cmd
STTS_NLP2CMD_ARGS=-r
STTS_NLP2CMD_CONFIRM=1
# Optional: prewarm nlp2cmd in background (Python worker)
STTS_NLP2CMD_PARALLEL=

# Defaults
STTS_TIMEOUT=5
STTS_LANGUAGE=pl

# ============================================================================
# STT PROVIDERS (Speech-to-Text)
# ============================================================================
# Options: whisper_cpp, vosk, deepgram (online)
STTS_STT_PROVIDER=
STTS_STT_MODEL=

# Local priority (fallback chain)
# STTS_STT_PRIMARY=vosk:small-pl
# STTS_STT_FALLBACK=whisper_cpp:tiny

# Vosk (fast, ~300ms, 50MB model)
# Install: make stt-vosk-pl
# STTS_STT_PROVIDER=vosk
# STTS_STT_MODEL=small-pl

# Whisper.cpp (GPU support)
STTS_STT_GPU_LAYERS=
STTS_STT_PROMPT=

# Whisper.cpp tuning (optional)
# STTS_STT_THREADS=4
# STTS_WHISPER_MAX_LEN=72
# STTS_WHISPER_WORD_THOLD=0.01
# STTS_WHISPER_NO_SPEECH_THOLD=0.8
# STTS_WHISPER_ENTROPY_THOLD=
# STTS_WHISPER_BEST_OF=1
# STTS_WHISPER_TEMPERATURE=0

# Vosk grammar boost (optional): JSON list of phrases OR path to JSON
# Examples:
#   STTS_VOSK_GRAMMAR_JSON='["ls","make build","echo hello"]'
#   STTS_VOSK_GRAMMAR_JSON=./python/samples/vosk_grammar.json
# STTS_VOSK_GRAMMAR_JSON=

# Deepgram (online STT) - requires API key
STTS_DEEPGRAM_KEY=
STTS_DEEPGRAM_MODEL=nova-2

# ============================================================================
# TTS PROVIDERS (Text-to-Speech)
# ============================================================================
# Options: piper (best), espeak, mimic3, spd-say, festival, say (macOS)
STTS_TTS_PROVIDER=
STTS_TTS_VOICE=pl

# Local priority (fallback chain)
# STTS_TTS_PRIMARY=piper
# STTS_TTS_FALLBACK=espeak:pl

# Piper voices (neural, best quality)
# Install: make tts-piper-pl
# STTS_TTS_PROVIDER=piper
# STTS_TTS_VOICE=pl_PL-gosia-medium
STTS_AUTO_TTS=1
STTS_MIC_DEVICE=auto
STTS_AUDIO_AUTO_SWITCH=1
STTS_STREAM=
STTS_FAST_START=
STTS_GPU_ENABLED=

# Interactive shell behavior
STTS_PROMPT_VOICE_FIRST=1
STTS_STARTUP_TTS=1

# Optional: playback device (linux)
STTS_SPEAKER_DEVICE=

# VAD auto-stop (recommended)
STTS_VAD_ENABLED=1
STTS_VAD_SILENCE_MS=800
STTS_VAD_THRESHOLD_DB=-45

# Safety
STTS_SAFE_MODE=0

# Testing: when set to 1, STT is read from sidecar file.wav.txt
STTS_MOCK_STT=0
