#!/usr/bin/env python3
"""stts (repo root wrapper)

Repo jest podzielone na dwa niezależne projekty:
- python/stts
- nodejs/stts.mjs

Ten plik deleguje do python/stts.
"""

import os
import sys
from pathlib import Path


def main() -> int:
    root = Path(__file__).resolve().parent
    target = root / "python" / "stts"
    if not target.exists():
        print("❌ Missing ./python/stts", file=sys.stderr)
        return 1
    os.execv(sys.executable, [sys.executable, str(target), *sys.argv[1:]])
    return 1


if __name__ == "__main__":
    raise SystemExit(main())
